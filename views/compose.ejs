<%- include("partials/header") -%>

<div class="container p-2">
  <h1 style="color:#1abc9c;" class="text-center pt-2">Compose</h1>

  <form class="" action="/compose" method="post">
    <div class="form-group">
      <div class="px-2">
        <label>Title</label>
        <input type="text" class="form-control" name="title">
      </div>
      <div class="p-2">
        <label>Topic</label>
        <input type="text" class="form-control" name="topic">
      </div>  
      <div class="p-2">
        <label>Post</label>
        <textarea name="content" class="form-control" rows="10" cols="100"></textarea>
      </div>  
    </div>
    <div class="d-flex justify-content-center p-2">
      <button style="background-color:#1abc9c;" type="submit"  class="btn text-center text-white" name="button">Publish</button>
    </div>
  </form>
</div>  


<%- include("partials/footer") -%>
